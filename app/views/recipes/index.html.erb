<div class="container">
  <ul class="list-unstyled w-75 mx-auto">
    <% if @recipes.empty? %>
      <li class="text-center">No recipes yet. Why not <%= link_to 'add one', new_recipe_path %>?</li>
    <% end %>
    
    <% @recipes.each do |recipe| %>
      <%= render 'recipe_card', recipe: recipe %>
    <% end %>
  </ul>
</div>