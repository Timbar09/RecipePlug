<style>
  .my_hover{
    color: #343a40;
  }

  .my_hover:hover {
    text-decoration: none;
    color: #007bff;
  }
</style>

<li class="row border p-3 mb-3 bg-light">
  <div class="col-auto">
    <h2 class="m-0"><%= link_to recipe.name, recipe, class: "my_hover" %>
    </h2>

    <% if recipe.user == current_user %>
      <%= button_to "Delete", recipe, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm mt-3" %>
    <% end %>
  </div>

  <div class="col-auto">
    <p class="pt-2"><%= recipe.description %></p>
  </div>
</li>











