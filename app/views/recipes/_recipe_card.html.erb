<style>
  .my_hover{
    color: #343a40;
  }

  .my_hover:hover {
    text-decoration: none;
    color: #007bff;
  }
</style>

<li class="row border p-3 mb-3 bg-light">
  <div class="col-12 col-md-4">
    <h2 class="m-0">
      <%= link_to recipe.name, recipe, class: "my_hover" %>
    </h2>

    <% if current_page?(recipes_path) %>
      <%= button_to "Delete", recipe, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm mt-3" %>
    <% else %>
    <p class="mt-3">
      by: <%= recipe.user.name %>
    </p>
    <% end %>
  </div>

  <div class="col-12 col-md-8">
    <% if current_page?(recipes_path) %>
      <p class="pt-2"><%= recipe.description %></p>
    <% else %>
      <p class="pt-2">Total food items: <%= recipe.foods.count %></p>
      <p class="pt-2">Total price: $<%= recipe.recipe_foods.sum { |recipe_food| recipe_food.food.price * recipe_food.quantity } %></p>
    <% end %>
  </div>
</li>











