<div class="container">
  <ul class="recipe_list">
    <% if @recipes.empty? %>
      <li>No public recipes yet. Why not <%= link_to 'add one', new_recipe_path %>?</li>
    <% end %>
    
    <% @recipes.each do |recipe| %>
      <%= render 'recipe_card', recipe: recipe %>
    <% end %>
  </ul>
</div>