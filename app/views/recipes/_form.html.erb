<%= form_for recipe do |f| %>
  <div class='content'>
    <div class='field'>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'e.g. Chef Ramsay' %>
    </div>

    <div class='field'>
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: 'e.g. This is a recipe for a delicious meal' %>
    </div>

    <div class='field'>
      <%= f.label :preparation_time %>
      <%= f.text_field :preparation_time, placeholder: 'e.g. 10 minutes' %>
    </div>

    <div class='field'>
      <%= f.label :cooking_time %>
      <%= f.text_field :cooking_time, placeholder: 'e.g. 20 minutes' %>
    </div>

    <div class='field'>
      <%= f.label :public %>
      <%= f.check_box :public %>
    </div>
  </div>

  <div class='actions'>
    <%= f.submit 'Add recipe', data: { disable_with: 'Adding recipe...' } %>
  </div>
<% end %>