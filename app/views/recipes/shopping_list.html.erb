<div class='container'>
  <h1 class="my-3 text-center">Shopping List</h1>

  <div class='bg-light p-3 mb-3'>
    <p>Amount of food items to buy: <%= @foods.length %></p>
    <p>Total cost: $<%= @total %></p>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Unit Price</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.quantity %> <%= food.measurement_unit %></td>
          <td><%= food.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>