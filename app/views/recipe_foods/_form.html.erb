<%= form_with model: [recipe, @ingredient], url: url, method: method do |f| %>
    <div class="field">
      <%= f.label :food_id, 'Food' %>
      <%= f.collection_select :food_id, current_user.foods, :id, :name, {prompt: 'Select food item'} %>
    </div>

    <div class="field">
      <%= f.label :quantity %>
      <%= f.number_field :quantity %>
    </div>

    <%= f.submit btnName, class: 'btn btn-primary' %>
  <% end %>