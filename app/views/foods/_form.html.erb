<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

    <ul class="text-danger">
      <% food.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", autofocus: true, placeholder: "e.g. Chicken" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, class: "form-control", placeholder: "e.g. lbs" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, step: 1, min: 1, class: "form-control", placeholder: "e.g. 1" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01, min: 0, class: "form-control", placeholder: "e.g. 1.99" %>
  </div>
  
  <div class="form-group mb-3">
    <%= form.hidden_field :user_id  %>
  </div>

  <div class="actions">
    <%= form.submit "Add food", class: "btn btn-primary mt-3" %>
  </div>
<% end %>