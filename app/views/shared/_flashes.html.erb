<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <% if notice %>
        <p class="text-success p-1 mt-2"><%= notice %></p>
      <% elsif alert %>
        <p class="text-danger p-1 mt-2"><%= alert %></p>
      <% else %>
        <p class="text-success p-1 mt-2">&nbsp;</p>
      <% end %>
    </div>
  </div>	
</div>